    <title>Premium Spare Parts Data</title>
    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Load Firebase SDKs -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        // IMPORTED serverTimestamp and getDoc here 
        import { getFirestore, doc, getDoc, addDoc, setDoc, updateDoc, deleteDoc, onSnapshot, collection, query, where, getDocs, serverTimestamp, setLogLevel } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";
        
        // --- Core Firebase Initialization ---
        setLogLevel('Debug');
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
        const firebaseConfig = JSON.parse(typeof __firebase_config !== 'undefined' ? __firebase_config : '{}');

        if (Object.keys(firebaseConfig).length === 0) {
            console.error("Firebase config is missing. Data persistence will not work.");
            window.db = null;
            window.auth = null;
        } else {
            const app = initializeApp(firebaseConfig);
            window.db = getFirestore(app);
            window.auth = getAuth(app);
            
            // Expose required functions globally for use in the main script block
            window.firebase = {
                getFirestore, doc, addDoc, updateDoc, deleteDoc, onSnapshot, collection, query, getDocs, getDoc, serverTimestamp // ADDED getDoc and serverTimestamp
            };

            // --- Authentication Setup ---
            onAuthStateChanged(window.auth, (user) => {
                if (user) {
                    window.userId = user.uid;
                    document.getElementById('user-id-display').textContent = `User ID: ${user.uid}`;
                    console.log("Firebase Auth State Changed: Logged in. UID:", user.uid);
                    // Once authenticated, load the initial data
                    window.loadPartsData();
                } else {
                    console.log("Firebase Auth State Changed: Logged out or still authenticating.");
                }
            });

            const authenticate = async () => {
                try {
                    const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;
                    if (initialAuthToken) {
                        await signInWithCustomToken(window.auth, initialAuthToken);
                        console.log("Signed in with custom token.");
                    } else {
                        await signInAnonymously(window.auth);
                        console.log("Signed in anonymously.");
                    }
                } catch (error) {
                    console.error("Authentication Error:", error);
                }
            };
            authenticate();
        }

        window.APP_ID = appId;
    </script>

    <style>
        /* Custom scrollbar for better look */
        ::-webkit-scrollbar {
            width: 8px;
        }
        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }
        ::-webkit-scrollbar-thumb {
            background: #cbd5e1; /* slate-300 */
            border-radius: 4px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #94a3b8; /* slate-400 */
        }
        
        /* Font setup */
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc; /* slate-50 */
        }
        .premium-shadow {
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
        .table-cell-text {
            /* Fix for long text wrapping in table cells */
            word-break: break-word;
        }
    </style>
</head>
<body class="min-h-screen">

    <!-- Main Content Container -->
    <div class="container mx-auto p-4 lg:p-8">
        
        <!-- Header & Controls -->
        <header class="mb-8 p-6 bg-white rounded-xl premium-shadow">
            <h1 class="text-3xl font-extrabold text-gray-800 mb-2">Spare Parts Inventory Dashboard</h1>
            <p class="text-gray-500 mb-4" id="user-id-display">Connecting to database...</p>

            <div class="flex flex-col sm:flex-row gap-4">
                <!-- Search Input -->
                <input type="text" id="search-input" oninput="searchParts(this.value)" placeholder="Search by Zoren No., OEM No., Car Maker, or Application..."
                       class="flex-grow p-3 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-150">
                
                <!-- Add Button -->
                <button onclick="showModal('add')"
                        class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition duration-200 premium-shadow whitespace-nowrap">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline mr-2" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                    </svg>
                    Add Data
                </button>
            </div>
        </header>

        <!-- Parts Table/List Area -->
        <div class="bg-white rounded-xl premium-shadow overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/12">Zoren No.</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-2/12">OEM No.</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-2/12">Car Maker</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-5/12">Applications</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-2/12">Actions</th>
                    </tr>
                </thead>
                <tbody id="parts-table-body" class="bg-white divide-y divide-gray-200">
                    <tr><td colspan="5" class="text-center py-4 text-gray-500">Loading data...</td></tr>
                </tbody>
            </table>
        </div>
    </div>
    
    <!-- Modal Container (for Add/Edit) -->
    <div id="data-modal" class="fixed inset-0 bg-gray-900 bg-opacity-75 hidden items-center justify-center p-4 z-50 transition-opacity duration-300" onclick="closeModal(event)">
        <div class="bg-white rounded-xl premium-shadow max-w-lg w-full p-6 transition-transform duration-300 scale-95" onclick="event.stopPropagation()">
            <h2 id="modal-title" class="text-2xl font-bold text-gray-800 mb-4">Add New Part</h2>
            
            <form id="data-form" onsubmit="handleFormSubmit(event)">
                <input type="hidden" id="part-id">
                
                <!-- Zoren No. -->
                <div class="mb-4">
                    <label for="zorenNo" class="block text-sm font-medium text-gray-700">Zoren No.</label>
                    <input type="text" id="zorenNo" required
                           class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                </div>

                <!-- OEM No. -->
                <div class="mb-4">
                    <label for="oemNo" class="block text-sm font-medium text-gray-700">OEM No.</label>
                    <input type="text" id="oemNo" required
                           class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                </div>

                <!-- Car Maker -->
                <div class="mb-4">
                    <label for="carMaker" class="block text-sm font-medium text-gray-700">Car Maker</label>
                    <input type="text" id="carMaker" required
                           class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                </div>

                <!-- Applications -->
                <div class="mb-6">
                    <label for="applications" class="block text-sm font-medium text-gray-700">Applications (Model/Year)</label>
                    <textarea id="applications" rows="3" required
                              class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"></textarea>
                </div>
                
                <div class="flex justify-end space-x-3">
                    <button type="button" onclick="closeModal()"
                            class="px-4 py-2 text-gray-600 bg-gray-100 rounded-lg hover:bg-gray-200 transition duration-150">
                        Cancel
                    </button>
                    <button type="submit" id="modal-submit-btn"
                            class="px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition duration-200">
                        Save Part
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Confirmation Modal (for Delete) -->
    <div id="confirm-modal" class="fixed inset-0 bg-gray-900 bg-opacity-75 hidden items-center justify-center p-4 z-50 transition-opacity duration-300" onclick="closeConfirmModal(event)">
        <div class="bg-white rounded-xl premium-shadow max-w-sm w-full p-6 transition-transform duration-300 scale-95" onclick="event.stopPropagation()">
            <h2 class="text-xl font-bold text-gray-800 mb-4">Confirm Deletion</h2>
            <p class="mb-6 text-gray-600">Are you sure you want to delete this part? This action cannot be undone.</p>
            
            <div class="flex justify-end space-x-3">
                <button type="button" onclick="closeConfirmModal()"
                        class="px-4 py-2 text-gray-600 bg-gray-100 rounded-lg hover:bg-gray-200 transition duration-150">
                    Cancel
                </button>
                <button type="button" id="confirm-delete-btn"
                        class="px-4 py-2 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition duration-200">
                    Delete
                </button>
            </div>
        </div>
    </div>


    <script>
        // Initial Sample Data Structure based on PDF
        const initialPartsData = [
            { zorenNo: "ZRM0003011", oemNo: "31110-09000 E8678M", carMaker: "Hyundai", applications: "HYUNDAI SONATA 2.0 / KIA OPTIMA 2001-2005" },
            { zorenNo: "ZRM0003012", oemNo: "31110-3K300", carMaker: "Hyundai", applications: "HYUNDAI Sonata (2006-2010)" },
            { zorenNo: "ZRM1501083", oemNo: "LR038599 / LR038601", carMaker: "LAND ROVER", applications: "LR4 / Discovery 4 V8 5.0 Liter | 2010 - 2013" },
            { zorenNo: "ZRM1501101", oemNo: "LR057235 / LR044427", carMaker: "LAND ROVER", applications: "Land Rover LR2 3.2L 2.0L 2008 - 2012" },
            { zorenNo: "ZRM1501121", oemNo: "LR065349", carMaker: "LAND ROVER", applications: "RANGE ROVER EVOQUE 2.0L 16V 2012-2017" }
        ];

        let allParts = [];
        let currentSearchQuery = '';

        // --- Utility Functions ---
        const getPartsCollection = () => {
            if (!window.db || !window.userId) {
                console.error("Firestore not initialized or userId missing.");
                return null;
            }
            // Use private collection path: /artifacts/{appId}/users/{userId}/spare_parts
            const path = `artifacts/${window.APP_ID}/users/${window.userId}/spare_parts`;
            return window.firebase.collection(window.db, path);
        };

        const renderTable = (partsToRender) => {
            const tableBody = document.getElementById('parts-table-body');
            tableBody.innerHTML = '';

            if (partsToRender.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="5" class="text-center py-8 text-gray-500">No parts found matching your criteria.</td></tr>';
                return;
            }

            partsToRender.forEach(part => {
                const row = tableBody.insertRow();
                row.className = 'hover:bg-blue-50 transition duration-150';
                
                row.innerHTML = `
                    <td class="px-6 py-4 table-cell-text">${part.zorenNo || 'N/A'}</td>
                    <td class="px-6 py-4 table-cell-text">${part.oemNo || 'N/A'}</td>
                    <td class="px-6 py-4 table-cell-text">${part.carMaker || 'N/A'}</td>
                    <td class="px-6 py-4 text-sm text-gray-500 table-cell-text">${part.applications || 'No application details'}</td>
                    <td class="px-6 py-4 flex flex-col sm:flex-row gap-2">
                        <button onclick="showModal('edit', '${part.id}')"
                                class="px-3 py-1 text-sm text-blue-600 bg-blue-100 rounded-lg hover:bg-blue-200 transition duration-150 font-medium">
                            Edit
                        </button>
                        <button onclick="showConfirmModal('${part.id}')"
                                class="px-3 py-1 text-sm text-red-600 bg-red-100 rounded-lg hover:bg-red-200 transition duration-150 font-medium">
                            Delete
                        </button>
                    </td>
                `;
            });
        };

        window.searchParts = (query) => {
            currentSearchQuery = query.toLowerCase();
            const filteredParts = allParts.filter(part => {
                const searchFields = [part.zorenNo, part.oemNo, part.carMaker, part.applications];
                return searchFields.some(field => field && field.toLowerCase().includes(currentSearchQuery));
            });
            renderTable(filteredParts);
        };

        // --- Modal & Form Logic ---
        const dataModal = document.getElementById('data-modal');
        const confirmModal = document.getElementById('confirm-modal');
        const form = document.getElementById('data-form');
        let currentMode = 'add'; // 'add' or 'edit'

        window.showModal = (mode, partId = null) => {
            currentMode = mode;
            dataModal.classList.remove('hidden');
            dataModal.classList.add('flex');
            document.getElementById('modal-title').textContent = mode === 'add' ? 'Add New Part' : 'Edit Part Data';
            document.getElementById('modal-submit-btn').textContent = mode === 'add' ? 'Save Part' : 'Update Part';

            form.reset();
            document.getElementById('part-id').value = '';

            if (mode === 'edit' && partId) {
                const part = allParts.find(p => p.id === partId);
                if (part) {
                    document.getElementById('part-id').value = partId;
                    document.getElementById('zorenNo').value = part.zorenNo || '';
                    document.getElementById('oemNo').value = part.oemNo || '';
                    document.getElementById('carMaker').value = part.carMaker || '';
                    document.getElementById('applications').value = part.applications || '';
                }
            }
        };

        window.closeModal = (event) => {
            if (event && event.target.id === 'data-modal') {
                dataModal.classList.remove('flex');
                dataModal.classList.add('hidden');
            } else if (!event) {
                dataModal.classList.remove('flex');
                dataModal.classList.add('hidden');
            }
        };

        window.showConfirmModal = (partId) => {
            confirmModal.classList.remove('hidden');
            confirmModal.classList.add('flex');
            document.getElementById('confirm-delete-btn').onclick = () => deletePart(partId);
        };

        window.closeConfirmModal = (event) => {
            if (event && event.target.id === 'confirm-modal') {
                confirmModal.classList.remove('flex');
                confirmModal.classList.add('hidden');
            } else if (!event) {
                confirmModal.classList.remove('flex');
                confirmModal.classList.add('hidden');
            }
        };

        const getFormData = () => ({
            zorenNo: document.getElementById('zorenNo').value.trim(),
            oemNo: document.getElementById('oemNo').value.trim(),
            carMaker: document.getElementById('carMaker').value.trim(),
            applications: document.getElementById('applications').value.trim(),
        });

        window.handleFormSubmit = async (event) => {
            event.preventDefault();
            closeModal();
            const data = getFormData();
            const partId = document.getElementById('part-id').value;
            
            try {
                if (currentMode === 'add') {
                    // Correctly access serverTimestamp from window.firebase
                    await addPart({ ...data, createdAt: window.firebase.serverTimestamp() }); 
                } else if (currentMode === 'edit' && partId) {
                    await updatePart(partId, data);
                }
            } catch (error) {
                console.error("Error saving data:", error);
                // In a production app, show a message box here instead of console.error
            }
        };
        
        // --- Firestore CRUD Operations ---

        window.addPart = async (partData) => {
            const partsRef = getPartsCollection();
            if (!partsRef) return;

            try {
                await window.firebase.addDoc(partsRef, partData);
                console.log("Part added successfully.");
            } catch (e) {
                console.error("Error adding document: ", e);
            }
        };

        const updatePart = async (partId, partData) => {
            const partsRef = getPartsCollection();
            if (!partsRef) return;

            try {
                const partDocRef = window.firebase.doc(partsRef, partId);
                await window.firebase.updateDoc(partDocRef, partDocRef, partData);
                console.log("Part updated successfully.");
            } catch (e) {
                console.error("Error updating document: ", e);
            }
        };

        const deletePart = async (partId) => {
            closeConfirmModal();
            const partsRef = getPartsCollection();
            if (!partsRef) return;

            try {
                const partDocRef = window.firebase.doc(partsRef, partId);
                await window.firebase.deleteDoc(partDocRef);
                console.log("Part deleted successfully.");
            } catch (e) {
                console.error("Error deleting document: ", e);
            }
        };

        // --- Realtime Data Listener and Initial Load ---
        window.loadPartsData = () => {
            const partsRef = getPartsCollection();
            if (!partsRef) return;

            window.firebase.onSnapshot(partsRef, async (snapshot) => {
                const fetchedParts = snapshot.docs.map(doc => ({
                    id: doc.id,
                    ...doc.data()
                }));

                // Check if the collection is empty and add initial sample data if it is.
                if (fetchedParts.length === 0) {
                    console.log("Collection is empty, adding initial sample data.");
                    
                    // Check if initial data has been added before to prevent duplicates on every load
                    const initialDocRef = window.firebase.doc(partsRef, "initial_data_flag");
                    // Correctly access getDoc from window.firebase
                    const initialDoc = await window.firebase.getDoc(initialDocRef); 

                    if (!initialDoc.exists()) {
                        for (const part of initialPartsData) {
                            await window.firebase.addDoc(partsRef, part);
                        }
                        // Set a flag so we don't add samples again
                        await window.firebase.setDoc(initialDocRef, { added: true });
                        console.log("Initial sample data added.");
                    }
                }
                
                allParts = fetchedParts.filter(p => p.id !== "initial_data_flag"); // Filter out the flag document
                
                // Re-render the table with the current search query applied
                if (currentSearchQuery) {
                    searchParts(currentSearchQuery);
                } else {
                    renderTable(allParts);
                }
                
                console.log(`Data updated: ${allParts.length} parts loaded.`);
            }, (error) => {
                console.error("Error fetching real-time data: ", error);
                document.getElementById('parts-table-body').innerHTML = '<tr><td colspan="5" class="text-center py-8 text-red-500">Error loading data. Check console for details.</td></tr>';
            });
        };

        // Initial setup will be triggered by onAuthStateChanged in the module script
    </script>
</body>
</html>
